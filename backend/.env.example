# Server
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:5173
API_BASE_URL=http://localhost:3001

# JWT Secret (generate a strong random string for production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# PostgreSQL Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fundraiser_crm
DB_USER=postgres
DB_PASSWORD=your-database-password

# SMTP Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
SMTP_FROM=Foundation Fundraiser <noreply@yourfoundation.org>

# LLM / AI Configuration
# Option 1: OpenAI
OPENAI_API_KEY=sk-your-openai-api-key
LLM_MODEL=gpt-4o-mini

# Option 2: Custom provider (e.g., Anthropic, local model)
# LLM_API_KEY=your-api-key
# LLM_BASE_URL=https://api.anthropic.com/v1
# LLM_MODEL=claude-3-sonnet

# Sequence Processor
ENABLE_SEQUENCE_PROCESSOR=true
